# ==============================================
# PRODUKTION - Alle Werte vor dem Deploy setzen!
# ==============================================

# Database (starkes Passwort verwenden!)
DB_USER=scraper
DB_PASSWORD=HIER_SICHERES_PASSWORT_SETZEN
DB_NAME=event_scraper

# Google Geocoding API Key
GOOGLE_API_KEY=HIER_DEINEN_GOOGLE_API_KEY
GEOCODING_DRY_RUN=false

# Scraper Settings
REQUEST_DELAY=1.5

# Scheduler (Dienstag + Freitag um 06:00)
SCRAPE_DAYS=tue,fri
SCRAPE_HOUR=6
SCRAPE_MINUTE=0

# Caddy - Domain oder :80 fuer IP-Zugang
# Fuer HTTPS mit Domain:
#   SITE_ADDRESS=scraper.deine-domain.de
# Fuer nur HTTP (zum Testen):
#   SITE_ADDRESS=:80
SITE_ADDRESS=:80

# Basic Auth
# Username fuer Login
AUTH_USER=admin
# Passwort-Hash generieren mit:
#   docker run --rm caddy:2-alpine caddy hash-password --plaintext DEIN_PASSWORT
# Dann den Hash hier einfuegen:
AUTH_PASSWORD_HASH=HIER_CADDY_HASH_EINFUEGEN
